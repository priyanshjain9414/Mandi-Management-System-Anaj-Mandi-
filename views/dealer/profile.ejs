<% layout("/layouts/boilerplate") %>

<style>
  .email-verify-card {
    width: 300px;
    height: 45px;
  }

  .email-verify-card .card-body {
    padding: 0px 10px;
  }
</style>

<div class="container mt-4">
  <!-- ================= PAGE HEADER ================= -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="fw-bold text-success">
      <i class="fa-solid fa-user-tie me-2 text-success"></i>
      Dealer Profile
      <span class="badge bg-success ms-2">Dealer</span>
    </h3>

    <% if (!dealer.emailVerified) { %>
    <div class="d-flex justify-content-center">
      <div class="card border-warning shadow-sm email-verify-card">
        <div
          class="card-body d-flex justify-content-between align-items-center flex-wrap"
        >
          <div class="d-flex align-items-center">
            <div>
              <h6 class="mb-0 mt-0 fw-bold text-warning">Email Not Verified</h6>
            </div>
          </div>
          &nbsp &nbsp
          <a href="/dealer/verify-otp" class="btn btn-sm btn-warning">
            Verify Now
          </a>
        </div>
      </div>
    </div>
    <% } %>
    <div class="d-flex gap-2">
      <% if (dealer.emailVerified) { %>
      <a href="/dealer/change-password" class="btn btn-outline-secondary">
        <i class="fa-solid fa-lock-open me-1"></i>
        Change Password
      </a>
      <% } %>

      <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
      </a>
    </div>
  </div>

  <!-- ================= DEALER INFO CARD ================= -->
  <div class="card shadow-sm mb-4">
    <div class="card-header bg-success text-white">
      <h5 class="mb-0">Business Information</h5>
    </div>

    <div class="card-body">
      <div class="row g-3">
        <div class="col-md-6">
          <strong>Name:</strong>
          <p class="mb-0"><%= dealer.name %></p>
        </div>

        <div class="col-md-6">
          <strong>Firm Name:</strong>
          <p class="mb-0"><%= dealer.firmName %></p>
        </div>

        <div class="col-md-6">
          <strong>Email:</strong>
          <p class="mb-0"><%= dealer.email %></p>
        </div>

        <div class="col-md-6">
          <strong>GST No:</strong>
          <p class="mb-0"><%= dealer.gstNo %></p>
        </div>

        <div class="col-md-6">
          <strong>Primary Contact:</strong>
          <p class="mb-0"><%= dealer.contactNumber1 %></p>
        </div>

        <div class="col-md-6">
          <strong>Secondary Contact:</strong>
          <p class="mb-0"><%= dealer.contactNumber2 %></p>
        </div>

        <div class="col-md-6">
          <strong>City:</strong>
          <p class="mb-0"><%= dealer.city %></p>
        </div>

        <div class="col-md-6">
          <strong>State:</strong>
          <p class="mb-0"><%= dealer.state %></p>
        </div>

        <div class="col-md-6">
          <strong>Shop No:</strong>
          <p class="mb-0"><%= dealer.shopNo %></p>
        </div>

        <div class="col-md-6">
          <strong>Zip Code:</strong>
          <p class="mb-0"><%= dealer.zip %></p>
        </div>

        <div class="col-md-12">
          <strong>Address:</strong>
          <p class="mb-0">
            <%= dealer.address %>, <%= dealer.city %>, <%= dealer.state %> - <%=
            dealer.zip %>
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- ================= OVERALL PAYMENT POSITION ================= -->
  <div class="card shadow-sm my-5 border-0 mb-4 mt-4">
    <div class="card-header bg-success text-white fw-bold">
      <h5 class="mb-0">Financial Overview</h5>
    </div>

    <div class="card-body">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="p-3 bg-white rounded border shadow-sm h-100">
            <div class="text-muted small fw-bold mb-2">
              <i class="fa-solid fa-tractor me-2 text-danger"></i>
              FARMER PAYABLES
            </div>

            <div class="d-flex justify-content-between mb-1">
              <span>Purchase</span>
              <span class="fw-bold">₹ <%= totals.totalBuy.toFixed(0) %></span>
            </div>

            <div class="d-flex justify-content-between text-success fs-7">
              <span> Paid</span>
              <span>₹ <%= totals.givePaid.toFixed(0) %></span>
            </div>

            <hr class="my-2" />

            <div
              class="d-flex justify-content-between text-danger fw-bold fs-6"
            >
              <span>Pending</span>
              <span>₹ <%= totals.givePending.toFixed(0) %></span>
            </div>
          </div>
        </div>

        <!-- BUYER RECEIVABLES -->
        <div class="col-md-4">
          <div class="p-3 bg-white rounded border shadow-sm h-100">
            <div class="text-muted small fw-bold mb-2">
              <i class="fa-solid fa-cart-shopping me-2 text-success"></i>
              BUYER RECEIVABLES
            </div>

            <div class="d-flex justify-content-between mb-1">
              <span>Sales</span>
              <span class="fw-bold">₹ <%= totals.totalSell.toFixed(0) %></span>
            </div>

            <div class="d-flex justify-content-between text-success fs-7">
              <span>Received</span>
              <span>₹ <%= totals.receivePaid.toFixed(0) %></span>
            </div>

            <hr class="my-2" />

            <div
              class="d-flex justify-content-between text-success fw-bold fs-6"
            >
              <span>Pending</span>
              <span>₹ <%= totals.receivePending.toFixed(0) %></span>
            </div>
          </div>
        </div>

        <!-- LOAN ASSETS -->
        <div class="col-md-4">
          <div class="p-3 bg-white rounded border shadow-sm h-100">
            <div class="text-muted small fw-bold mb-2">
              <i class="fa-solid fa-hand-holding-dollar me-2 text-warning"></i>
              LOAN ASSETS
            </div>

            <div class="d-flex justify-content-between mb-1">
              <span>Principal</span>
              <span class="fw-bold"
                >₹ <%= loan.totalLoanGiven.toFixed(0) %></span
              >
            </div>

            <div class="d-flex justify-content-between text-warning fs-7">
              <span> Interest</span>
              <span>+₹ <%= loan.totalInterestAccrued.toFixed(0) %></span>
            </div>

            <hr class="my-2" />

            <div class="d-flex justify-content-between text-dark fw-bold fs-6">
              <span>Pending</span>
              <span>₹ <%= loan.totalPendingAmount.toFixed(0) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card shadow-sm mb-5 border-0">
    <div class="card-header bg-success text-white fw-bold">
      <h5 class="mb-0">Overall Payment Position</h5>
    </div>

    <div class="card-body">
      <div class="row g-4 mb-3">
        <!-- HAVE TO PAY -->
        <div class="col-md-6 mb-4">
          <div class="p-3 bg-white rounded border shadow-sm h-100">
            <div class="text-muted small fw-bold mb-2">
              <i class="fa-solid fa-arrow-up text-danger me-2"></i>
              AMOUNT YOU HAVE TO PAY
            </div>

            <div class="d-flex justify-content-between mb-1">
              <span>Total Purchase</span>
              <span class="fw-bold">₹ <%= totals.totalBuy.toFixed(2) %></span>
            </div>

            <div class="d-flex justify-content-between text-success fs-6">
              <span>Already Paid</span>
              <span>₹ <%= totals.givePaid.toFixed(2) %></span>
            </div>

            <hr class="my-2" />

            <div
              class="d-flex justify-content-between text-danger fw-bold fs-5"
            >
              <span>Pending To Pay</span>
              <span>₹ <%= totals.givePending.toFixed(2) %></span>
            </div>
          </div>
        </div>

        <!-- WILL RECEIVE -->
        <div class="col-md-6 mb-4">
          <div class="p-3 bg-white rounded border shadow-sm h-100">
            <div class="text-muted small fw-bold mb-2">
              <i class="fa-solid fa-arrow-down text-success me-2"></i>
              AMOUNT YOU WILL RECEIVE
            </div>

            <!-- PENDING -->
            <div class="d-flex justify-content-between mb-1">
              <span>From Buyers</span>
              <span class="fw-bold"
                >₹ <%= totals.receivePending.toFixed(2) %></span
              >
            </div>

            <div class="d-flex justify-content-between fs-6 text-warning">
              <span>From Loans</span>
              <span>₹ <%= loan.totalPendingAmount.toFixed(2) %></span>
            </div>

            <div
              class="d-flex justify-content-between fw-bold text-success mt-1 fs-5"
            >
              <span>Total Pending</span>
              <span>
                ₹ <%= (totals.receivePending +
                loan.totalPendingAmount).toFixed(2) %>
              </span>
            </div>

            <hr class="my-2" />

            <!-- RECEIVED -->
            <div class="d-flex justify-content-between mb-1">
              <span>Buyer Received</span>
              <span class="fw-bold"
                >₹ <%= totals.receivePaid.toFixed(2) %></span
              >
            </div>

            <div class="d-flex justify-content-between small text-primary fs-6">
              <span>Loan Paid Back</span>
              <span>₹ <%= loan.totalPaidAmount.toFixed(2) %></span>
            </div>

            <div
              class="d-flex justify-content-between fw-bold text-primary mt-1 fs-5"
            >
              <span>Total Received</span>
              <span>
                ₹ <%= (totals.receivePaid + loan.totalPaidAmount).toFixed(2) %>
              </span>
            </div>
          </div>
        </div>

        <div class="row text-center mb-2">
          <div class="col-md-3">
            <div class="card shadow-sm">
              <div class="card-body">
                <h6 class="text-muted">Paid To Farmers</h6>
                <h4 class="text-danger">₹ <%= totals.givePaid.toFixed(2) %></h4>
              </div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="card shadow-sm">
              <div class="card-body">
                <h6 class="text-muted">Pending To Farmers</h6>
                <h4 class="text-danger">
                  ₹ <%= totals.givePending.toFixed(2) %>
                </h4>
              </div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="card shadow-sm">
              <div class="card-body">
                <h6 class="text-muted">Total Received</h6>
                <h4 class="text-success">
                  ₹ <%= (totals.receivePaid + loan.totalPaidAmount).toFixed(2)
                  %>
                </h4>
              </div>
            </div>
          </div>

          <div class="col-md-3">
            <div class="card shadow-sm">
              <div class="card-body">
                <h6 class="text-muted">Pending To Receive</h6>
                <h4 class="text-success">
                  ₹ <%= (totals.receivePending +
                  loan.totalPendingAmount).toFixed(2) %>
                </h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
