<% layout("/layouts/boilerplate") %>

<style>
  body {
    font-family: "Poppins", sans-serif;
    background: linear-gradient(135deg, #d8f3dc, #f1faee);
  }

  .register-card {
    background: #fff;
    border-radius: 18px;
    padding: 40px;
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.12);
  }

  .wide-container {
    max-width: 1000px;
  }

  .input-group-text {
    background: #e9f5ec;
    border: none;
    color: #2d6a4f;
  }

  .form-control,
  textarea {
    border-left: none;
    padding: 12px;
  }

  .form-control:focus,
  textarea:focus {
    box-shadow: none;
    border-color: #52b788;
  }

  .register-title {
    font-weight: 600;
    color: #1b4332;
  }
  #quantity {
    background: #f1faee;
    font-weight: 600;
  }
</style>

<div class="row mt-5">
  <div class="col-12 mx-auto wide-container">
    <div class="register-card">
      <h3 class="text-center mb-4 register-title">
        <i class="fa-solid fa-wheat-awn me-2"></i> Add Crop Entry
      </h3>

      <!-- PERSON INFO -->
      <div class="alert alert-success mb-4">
        <strong>Type:</strong> <%= personType %> | <strong>Name:</strong> <%=
        person.name %> |
        <strong>ID:</strong>
        <%= personType === "FARMER" ? person.farmerId : person.buyerId %>
      </div>

      <form action="/crop/new" method="POST" novalidate>
        <!-- Hidden values -->
        <input type="hidden" name="personType" value="<%= personType %>" />
        <input type="hidden" name="personRefId" value="<%= person._id %>" />
        <input
          type="hidden"
          name="personBusinessId"
          value="<%= personType === 'FARMER' ? person.farmerId : person.buyerId %>"
        />
        <input type="hidden" name="personName" value="<%= person.name %>" />

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-seedling"></i
              ></span>
              <select name="cropType" class="form-control" required>
                <option value="">Select Crop</option>
                <% CROP_TYPES.forEach(crop => { %>
                <option value="<%= crop %>"><%= crop %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-ranking-star"></i
              ></span>
              <select name="grade" class="form-control">
                <option value="">Grade</option>
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
                <option>E</option>
              </select>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-boxes-stacked"></i
              ></span>
              <input
                type="number"
                id="noOfGunny"
                name="noOfGunny"
                class="form-control"
                placeholder="Number of Gunny Bags"
                required
              />
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-weight-hanging"></i
              ></span>
              <input
                type="number"
                id="gunnyQuantity"
                name="gunnyQuantity"
                class="form-control"
                placeholder="Gunny Capacity (KG)"
                required
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-scale-balanced"></i
              ></span>
              <input
                type="number"
                id="leftquantity"
                name="leftquantity"
                class="form-control"
                placeholder="Left Quantity (KG)"
                required
              />
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-calculator"></i
              ></span>
              <input
                type="number"
                id="quantity"
                name="quantity"
                class="form-control"
                placeholder="Total (Quintal)"
                readonly
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text">â‚¹</span>
              <input
                type="number"
                name="pricePerQuintal"
                class="form-control"
                placeholder="Price per Quintal"
                required
              />
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-people-carry-box"></i
              ></span>
              <input
                type="number"
                name="labourCharges"
                class="form-control"
                placeholder="Labour Charges"
                required
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-truck"></i
              ></span>
              <input
                type="number"
                name="transportCharges"
                class="form-control"
                placeholder="Transport Charges"
                required
              />
            </div>
          </div>

          <div class="col-md-6 mb-4">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-receipt"></i
              ></span>
              <input
                type="number"
                name="otherCharges"
                class="form-control"
                placeholder="Other Charges"
                required
              />
            </div>
          </div>
        </div>

        <div class="d-flex gap-2">
          <button class="btn btn-success w-100">
            <i class="fa-solid fa-plus me-1"></i> Add Crop
          </button>

          <a
            href="javascript:history.back()"
            class="btn btn-outline-secondary w-100"
          >
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const noOfSacksInput = document.getElementById("noOfGunny");
  const sackQuantityInput = document.getElementById("gunnyQuantity");
  const leftQuantityInput = document.getElementById("leftquantity");
  const quintalInput = document.getElementById("quantity");

  function calculateQuantity() {
    const noOfSacks = Math.floor(noOfSacksInput.value || 0);
    const sackQty = Number(sackQuantityInput.value || 0);
    const leftQty = Number(leftQuantityInput.value || 0);

    const totalKg = noOfSacks * sackQty + leftQty;
    quintalInput.value = (totalKg / 100).toFixed(2);
  }

  noOfSacksInput.addEventListener("input", calculateQuantity);
  sackQuantityInput.addEventListener("input", calculateQuantity);
  leftQuantityInput.addEventListener("input", calculateQuantity);
</script>
