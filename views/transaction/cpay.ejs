<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <!-- ================= REVERSAL BANNER ================= -->
  <% if (cp.isReversal) { %>
  <div class="alert alert-danger text-center fw-bold mb-4">
    <i class="fa-solid fa-rotate-left me-1"></i> REVERSAL PAYMENT <br />
    The reverses payment of :- <strong><%= cp.paymentId %></strong>
  </div>
  <% } %>

  <!-- ================= HEADER SUMMARY ================= -->
  <div class="card shadow-sm mb-4 border-0">
    <div
      class="card-body rounded <%= cp.isReversal ? 'bg-danger-subtle' : 'bg-success-subtle' %>"
    >
      <div class="row">
        <div class="col-md-6">
          <h4
            class="fw-bold mb-1 <%= cp.isReversal ? 'text-danger' : 'text-success' %>"
          >
            <%= cp.isReversal ? 'Reversal ' : '' %>Crop Payment • <%=
            cp.isReversal ? cp.reversedPaymentId : cp.paymentId %>
          </h4>

          <p class="mb-0 text-muted">
            <strong><%= cp.personType %>:</strong>
            <%= cp.personName %> (<%= cp.personBusinessId %>)
          </p>

          <small class="text-muted">
            <i class="fa-regular fa-clock me-1"></i>
            <%= new Date(cp.date).toLocaleString() %>
          </small>
        </div>

        <div class="col-md-6 text-md-end mt-3 mt-md-0">
          <% if (!cp.isReversal) { %>
          <form
            action="/crop/payment/<%= cp.paymentId %>/reverse"
            method="POST"
            class="d-inline"
            onsubmit="return confirm('Reverse this payment? This action cannot be undone.')"
          >
            <button class="btn btn-outline-danger btn-sm">
              <i class="fa-solid fa-rotate-left me-1"></i> Reverse Payment
            </button>
          </form>
          <% } %>

          <a
            href="/receipt/crop-payment/<%= cp.isReversal ? cp.reversedPaymentId : cp.paymentId %>"
            target="_blank"
            class="btn btn-outline-secondary btn-sm"
          >
            <i class="fa-solid fa-print me-1"></i> Print Receipt
          </a>

          <span
            class="badge fs-6 px-3 py-2 <%= cp.isReversal ? 'bg-danger' : cp.status === 'DONE' ? 'bg-success' : 'bg-warning text-dark' %>"
          >
            <%= cp.isReversal ? 'REVERSED' : cp.status %>
          </span>

          <p class="mt-2 mb-0">
            <strong>Mode:</strong> <%= cp.isReversal ? 'CREDIT' : cp.mode %>
          </p>
        </div>
      </div>

      <hr class="mt-2" />

      <!-- ================= TOTALS ================= -->
      <div class="row text-center">
        <div class="col-md-4">
          <h6 class="text-muted">
            <%= cp.isReversal ? 'Total Pending (Before)' : 'Total Crop Amount'
            %>
          </h6>
          <h5 class="fw-bold">₹ <%= Math.abs(cp.totalCropAmount) %></h5>
        </div>

        <div class="col-md-4">
          <h6 class="text-muted">
            <%= cp.isReversal ? 'Reversed Amount' : 'Paid Amount' %>
          </h6>
          <h5
            class="fw-bold <%= cp.isReversal ? 'text-danger' : 'text-success' %>"
          >
            ₹ <%= Math.abs(cp.amountPaid) %>
          </h5>
        </div>

        <div class="col-md-4">
          <h6 class="text-muted">Pending (After)</h6>
          <h5 class="fw-bold text-danger">₹ <%= cp.pendingAmount %></h5>
        </div>
      </div>
    </div>
  </div>

  <!-- ================= CROP DETAILS ================= -->
  <h5 class="fw-bold mb-3">
    <%= cp.isReversal ? 'Reversed Crop Details' : 'Crop Details' %>
  </h5>

  <div class="row">
    <% cp.payments.forEach(p => { %>
    <div class="col-md-6 mb-4">
      <div
        class="card pay-card border-0 border-start border-4 <%= cp.isReversal ? 'border-danger' : 'border-success' %>"
      >
        <div class="card-body">
          <h6
            class="fw-bold mb-1 <%= cp.isReversal ? 'text-danger' : 'text-success' %>"
          >
            <%= p.cropType %> • <%= p.cropBusinessId %>
          </h6>

          <hr class="my-2" />

          <p class="mb-1">
            <strong>Quantity:</strong> <%= p.quantity %> Quintal
          </p>
          <p class="mb-1">
            <strong>Price / Quintal:</strong> ₹ <%= p.pricePerQuintal %>
          </p>
          <p class="mb-1">
            <strong>Total Amount:</strong> ₹ <%= p.totalAmount %>
          </p>

          <hr />

          <p class="mb-1 text-muted">
            Pending Before: ₹ <%= cp.isReversal ? p.pendingAfter -
            Math.abs(p.paidAmount) : p.pendingBefore %>
          </p>

          <p class="mb-1 <%= cp.isReversal ? 'text-danger' : 'text-success' %>">
            <%= cp.isReversal ? 'Reversed:' : 'Paid Now:' %> ₹ <%=
            Math.abs(p.paidAmount) %>
          </p>

          <p class="mb-1 text-danger">Pending After: ₹ <%= p.pendingAfter %></p>

          <div class="d-flex align-items-center">
            <span
              class="badge <%= cp.isReversal ? 'bg-danger' : p.statusAfter === 'DONE' ? 'bg-success' : 'bg-warning text-dark' %>"
            >
              <%= cp.isReversal ? 'REVERSED' : p.statusAfter %>
            </span>

            <a
              href="/crop/<%= p.cropBusinessId %>/cdetail"
              class="btn btn-sm <%= cp.isReversal ? 'btn-outline-danger' : 'btn-outline-success' %> ms-auto"
            >
              View Crop →
            </a>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
