<% layout("/layouts/boilerplate") %>

<style>
  body {
    background: linear-gradient(135deg, #d8f3dc, #f1faee);
    font-family: "Poppins", sans-serif;
  }

  .form-card {
    background: white;
    border-radius: 18px;
    padding: 40px;
    box-shadow: 0 14px 40px rgba(0, 0, 0, 0.12);
  }

  .wide-container {
    max-width: 1100px;
  }

  .input-group-text {
    background: #e9f5ec;
    border: none;
    color: #2d6a4f;
  }

  .form-control,
  .form-select,
  textarea {
    border-left: none;
    padding: 12px;
  }

  .form-control:focus,
  .form-select:focus {
    box-shadow: none;
    border-color: #52b788;
  }

  .form-title {
    color: #1b4332;
    font-weight: 600;
  }
</style>

<div class="row mt-5">
  <div class="col-12 mx-auto wide-container">
    <div class="form-card">
      <h3 class="text-center mb-4 form-title">
        <i class="fa-solid fa-wheat-awn me-2"></i> Add Crop Entry
      </h3>

      <!-- PERSON INFO -->
      <div class="alert alert-info mb-4">
        <strong>Type:</strong> <%= personType %> | <strong>Name:</strong> <%=
        person.name %> | <strong>ID:</strong> <%= personType === "FARMER" ?
        person.farmerId : person.buyerId %>
      </div>

      <form action="/crop/new" method="POST">
        <input type="hidden" name="personType" value="<%= personType %>" />
        <input type="hidden" name="personRefId" value="<%= person._id %>" />
        <input
          type="hidden"
          name="personBusinessId"
          value="<%= personType === 'FARMER' ? person.farmerId : person.buyerId %>"
        />
        <input type="hidden" name="personName" value="<%= person.name %>" />

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-seedling"></i
              ></span>
              <select
                id="cropType"
                name="cropType"
                class="form-select"
                required
              >
                <option value="">Select Crop</option>
                <% inventories.forEach(inv => { %>
                <option value="<%= inv.cropName %>"><%= inv.cropName %></option>
                <% }) %>
              </select>
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-ranking-star"></i
              ></span>
              <select name="grade" class="form-select">
                <option value="">Grade</option>
                <option>A</option>
                <option>B</option>
                <option>C</option>
                <option>D</option>
                <option>E</option>
              </select>
            </div>
          </div>
        </div>

        <!-- INVENTORY CARD -->
        <div id="inventoryCard" class="card shadow-sm mb-4 d-none">
          <div class="card-header bg-success fw-bold text-white">
            Inventory Details
          </div>
          <div class="card-body row g-2">
            <div class="col-md-4">
              <strong>Stock:</strong> <span id="iStock"></span> Qt
            </div>
            <div class="col-md-4">
              <strong>Buy:</strong> ₹<span id="iBuyPrice"></span>
            </div>
            <div class="col-md-4">
              <strong>Sell:</strong> ₹<span id="iSellPrice"></span>
            </div>
            <div class="col-md-4">
              <strong>Charges:</strong> ₹<span id="iCharges"></span>
            </div>
            <div class="col-md-4">
              <strong>Gunny KG:</strong> <span id="iSackQty"></span>
            </div>
            <div class="col-md-4">
              <strong>Gunny Stock:</strong> <span id="iNoSack"></span>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-scale-balanced"></i
              ></span>
              <input
                type="number"
                name="quantity"
                class="form-control"
                placeholder="Quantity (Quintal)"
                required
              />
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <div class="input-group">
              <span class="input-group-text">₹</span>
              <input
                type="number"
                name="pricePerQuintal"
                class="form-control"
                placeholder="Price per Quintal"
                required
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-helmet-safety"></i
              ></span>
              <input
                type="number"
                name="labourCharges"
                class="form-control"
                placeholder="Labour ₹"
                required
              />
            </div>
          </div>

          <div class="col-md-4 mb-3">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-truck"></i
              ></span>
              <input
                type="number"
                name="transportCharges"
                class="form-control"
                placeholder="Transport ₹"
                required
              />
            </div>
          </div>

          <div class="col-md-4 mb-4">
            <div class="input-group">
              <span class="input-group-text"
                ><i class="fa-solid fa-plus"></i
              ></span>
              <input
                type="number"
                name="otherCharges"
                class="form-control"
                placeholder="Other ₹"
                required
              />
            </div>
          </div>
        </div>

        <div class="d-flex gap-3">
          <button class="btn btn-success w-100">
            <i class="fa-solid fa-check me-1"></i> Add Crop
          </button>
          <a
            href="javascript:history.back()"
            class="btn btn-outline-secondary w-100"
          >
            Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  const inventories = <%- JSON.stringify(inventories) %>;
  const cropSelect = document.getElementById("cropType");
  const card = document.getElementById("inventoryCard");

  cropSelect.addEventListener("change", () => {
    const selected = inventories.find(i => i.cropName === cropSelect.value);
    if (!selected) return card.classList.add("d-none");

    iStock.innerText = Number(selected.totalInStock).toFixed(2);
    iBuyPrice.innerText = selected.pricePerQuintalBuy || "—";
    iSellPrice.innerText = selected.pricePerQuintalSell || "—";
    iCharges.innerText = selected.totalCharges || 0;
    iSackQty.innerText = selected.gunnyQuantity || "—";
    iNoSack.innerText = Number(selected.inStockGunny || 0).toFixed(2);

    card.classList.remove("d-none");
  });
</script>
