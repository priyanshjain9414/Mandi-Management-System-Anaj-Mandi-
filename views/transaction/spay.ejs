<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
  <% if (st.isReversal) { %>
  <div class="alert alert-danger text-center fw-bold mb-4">
    REVERSAL SETTLEMENT <br />
    The reverses settlement of :- <strong><%= st.settlementId %></strong>
  </div>

  <% } %>
  <!-- ===== HEADER SUMMARY ===== -->
  <div class="card shadow-sm mb-4 border-0">
    <div
      class="card-body rounded <%= st.isReversal ? 'bg-danger-subtle' : 'bg-success-subtle' %>"
    >
      <div class="row">
        <div class="col-md-6">
          <h4
            class="fw-bold mb-1 <%= st.isReversal ? 'text-danger' : 'text-success' %>"
          >
            <%= st.isReversal ? 'Settlement Reversal' : 'Settlement' %> • <%=
            st.isReversal ? st.reversedSettlementId : st.settlementId %>
          </h4>

          <p class="mb-0 text-muted">
            <strong>Farmer:</strong>
            <%= st.farmerName %> (<%= st.farmerBusinessId %>)
          </p>

          <small class="text-muted">
            <i class="fa-regular fa-clock me-1"></i>
            <%= new Date(st.date).toLocaleString() %>
          </small>
        </div>

        <div class="col-md-6 text-md-end mt-3 mt-md-0">
          <% if (!st.isReversal) { %>
          <form
            action="/settlement/<%= st.settlementId %>/reverse"
            method="POST"
            class="d-inline"
            onsubmit="return confirm('Reverse this settlement? This will rollback crops and loans.')"
          >
            <button class="btn btn-outline-danger btn-sm">
              <i class="fa-solid fa-rotate-left me-1"></i> Reverse Settlement
            </button>
          </form>
          <% } %>

          <a
            href="/receipt/settlement/<%= st.isReversal ? st.reversedSettlementId : st.settlementId %>"
            target="_blank"
            class="btn btn-outline-secondary btn-sm"
          >
            <i class="fa-solid fa-print me-1"></i> Print Receipt
          </a>
          <span
            class="badge fs-6 px-3 py-2 <%= st.isReversal ? 'bg-danger' : st.status === 'DONE' ? 'bg-success' : 'bg-warning text-dark' %>"
          >
            <%= st.isReversal ? 'REVERSED' : st.status %>
          </span>

          <p class="mt-2 mb-0">
            <strong>Direction:</strong> <%= st.settlementDirection %>
          </p>
        </div>
      </div>

      <hr />

      <div class="row text-center">
        <div class="col-md-2">
          <h6 class="text-muted">Total Crop</h6>
          <h5 class="fw-bold text-success">₹ <%= st.totalCropAmount %></h5>
        </div>

        <div class="col-md-2">
          <h6 class="text-muted">Total Loan</h6>
          <h5 class="fw-bold text-warning">₹ <%= st.totalLoanAmount %></h5>
        </div>

        <div class="col-md-4">
          <h6 class="text-muted">Net Amount</h6>
          <h5 class="fw-bold">₹ <%= st.netAmount %></h5>
        </div>

        <div class="col-md-2">
          <h6 class="text-muted"><%= st.isReversal ? 'Reversed' : 'Paid' %></h6>
          <h5
            class="fw-bold <%= st.isReversal ? 'text-danger' : 'text-success' %>"
          >
            ₹ <%= Math.abs(st.paidAmount) %>
          </h5>
        </div>

        <div class="col-md-2">
          <h6 class="text-muted">Pending (After)</h6>
          <h5 class="fw-bold text-danger">₹ <%= st.pendingAmount %></h5>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <!-- ===== CROPS ===== -->
    <div class="col-md-6">
      <h5 class="fw-bold mb-3 text-success">Crop Adjustments</h5>

      <% st.cropPayments.forEach(p => { %>
      <div
        class="card pay-card mb-4 border-0 border-start border-4 border-success"
      >
        <div class="card-body">
          <h6 class="fw-bold mb-1 text-success">
            <%= p.cropType %> • <%= p.cropBusinessId %>
          </h6>

          <hr class="my-2" />

          <p class="mb-1">
            <strong>Quantity:</strong> <%= p.quantity %> Quintal
          </p>
          <p class="mb-1">
            <strong>Price / Quintal:</strong> ₹ <%= p.pricePerQuintal %>
          </p>
          <p class="mb-1">
            <strong>Total Amount:</strong> ₹ <%= p.totalAmount %>
          </p>

          <hr />

          <p class="mb-1 text-muted">
            Pending Before: ₹ <%= st.isReversal ? p.pendingAfter -
            Math.abs(p.paidAmount) : p.pendingBefore %>
          </p>
          <p class="mb-1 <%= st.isReversal ? 'text-danger' : 'text-success' %>">
            <%= st.isReversal ? 'Reversed:' : 'Adjusted:' %> ₹ <%=
            Math.abs(p.paidAmount) %>
          </p>
          <p class="mb-1 text-danger">Pending After: ₹ <%= p.pendingAfter %></p>

          <div class="d-flex align-items-center mt-2">
            <span
              class="badge <%= st.isReversal ? 'bg-danger' : p.statusAfter === 'DONE' ? 'bg-success' : 'bg-warning text-dark' %>"
            >
              <%= st.isReversal ? 'REVERSED' : p.statusAfter %>
            </span>

            <a
              href="/crop/<%= p.cropBusinessId %>/cdetail"
              class="btn btn-sm btn-outline-success ms-auto"
            >
              View Crop →
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
    <!-- ===== LOANS ===== -->
    <div class="col-md-6">
      <h5 class="fw-bold mb-3 text-warning">Loan Adjustments</h5>

      <% st.loanPayments.forEach(p => { %>
      <div
        class="card pay-card mb-4 border-0 border-start border-4 border-warning"
      >
        <div class="card-body">
          <h6 class="fw-bold text-warning mb-1">
            Loan • <%= p.loanBusinessId %>
          </h6>

          <hr class="my-2" />

          <p class="mb-1">
            <strong>Loan Amount:</strong> ₹ <%= p.loanAmount %>
          </p>
          <p class="mb-1">
            <strong>Interest Rate:</strong> <%= p.interestRate %> %
          </p>
          <p class="mb-1">
            <strong>Period:</strong> <%= p.periodIndays %> days
          </p>

          <hr />

          <p class="mb-1 text-muted">
            Principal Pending Before: ₹ <%= st.isReversal ? p.totalPayableBefore
            - Math.abs(p.paidAmount) : p.principalPendingBefore %>
          </p>
          <p class="mb-1 text-muted">
            Interest Charged: ₹ <%= p.interestAmount %>
          </p>
          <p class="mb-1">
            <strong>Total Payable:</strong>
            ₹ <%= st.isReversal ? p.principalPendingBefore -
            Math.abs(p.paidAmount) : p.totalPayableBefore %>
          </p>

          <hr />

          <p class="mb-1 <%= st.isReversal ? 'text-danger' : 'text-success' %>">
            <%= st.isReversal ? 'Reversed:' : 'Adjusted:' %> ₹ <%=
            Math.abs(p.paidAmount) %>
          </p>

          <p class="mb-1 text-danger">
            Pending After: ₹ <%= p.pendingAmountAfter %>
          </p>

          <div class="d-flex align-items-center mt-2">
            <span
              class="badge <%= st.isReversal ? 'bg-danger' : p.loanStatusAfter === 'FINISHED' ? 'bg-success' : 'bg-warning text-dark' %>"
            >
              <%= st.isReversal ? 'REVERSED' : p.loanStatusAfter %>
            </span>

            <a
              href="/loan/<%= p.loanBusinessId %>/ldetail"
              class="btn btn-sm <%= st.isReversal ? 'btn-outline-danger' : 'btn-outline-success' %> ms-auto"
            >
              View Loan →
            </a>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>
